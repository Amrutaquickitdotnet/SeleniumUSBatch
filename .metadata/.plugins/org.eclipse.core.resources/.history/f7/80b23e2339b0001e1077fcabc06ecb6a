package com.java;

public class Example_002 {

	// main execution point Execution
	public static void main(String[] args) {

		// format text by pressing ctrl+A from keyboard and then press ctrl+shift+F
		// Calculate the size of primitive data type byte
		// + sign denotes concatination of 2 things
		// java.lang (internal packages)
		// . is used to access methods and properties related with class
		System.out.println("size of byte is" + " : " + Byte.SIZE);
		// 1 byte => numbers from -128 to 127
		// 8 bit = 1 byte
		// what would be min and max value of byte
		System.out.println("The minimum value of the byte is :" + Byte.MIN_VALUE);

		System.out.println("The maximum value of the byte is :" + Byte.MAX_VALUE);
		// properties => can be show without ()
		// method => denotes with parenthesis e.g makeTea()

		// Calculate size of short

		System.out.println("Size of short is " + ":" + Short.SIZE);
		System.out.println("The minimum value of the short is :" + Short.MIN_VALUE);
		System.out.println("The maximum value of the short is :" + Short.MAX_VALUE);
		// Wrapper class => is nothing but class which will going to wrap object of primitive data type
		// 32 bits => ? 4 bytes
		System.out.println("********Calculate Size min and max value for Integer*********************");
		System.out.println("Size of integer is " + ":" + Integer.SIZE);
		System.out.println("The minimum value of the integer is :" + Integer.MIN_VALUE);
		System.out.println("The maximum value of the integer is :" + Integer.MAX_VALUE);
	
		
		System.out.println("********Calculate Size min and max value for Long*********************");
		System.out.println("Size of Long is " + ":" + Long.SIZE);
		System.out.println("The minimum value of the long is :" + Long.MIN_VALUE);
		System.out.println("The maximum value of the long is :" + Long.MAX_VALUE);
		
		
		System.out.println("********Calculate Size min and max value for Integer*********************");
		System.out.println("Size of integer is " + ":" + Integer.SIZE);
		System.out.println("The minimum value of the integer is :" + Integer.MIN_VALUE);
		System.out.println("The maximum value of the integer is :" + Integer.MAX_VALUE);
		
		System.out.println("********Calculate Size min and max value for Integer*********************");
		System.out.println("Size of integer is " + ":" + Integer.SIZE);
		System.out.println("The minimum value of the integer is :" + Integer.MIN_VALUE);
		System.out.println("The maximum value of the integer is :" + Integer.MAX_VALUE);
		
		

	}
}
