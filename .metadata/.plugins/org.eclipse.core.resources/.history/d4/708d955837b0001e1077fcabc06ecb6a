package com.java;

public class Example_002 
{
	
	//main execution point  Execution 
	public static void main(String[] args) {
		// Calculate the size of primitive data type byte 
		//+ sign denotes concatination of 2 things
		// java.lang (internal packages)
		// . is used to access methods and properties related with class
		System.out.println("size of byte is"+" : "+Byte.SIZE);
		// 1 byte => numbers from -128 to 127 
		// 8 bit = 1 byte
		// what would be min and max value of byte
		System.out.println("The minimum value of the byte is :"+ Byte.MIN_VALUE);
		
		System.out.println("The maximum value of the byte is :"+ Byte.MAX_VALUE);
		// properties => can be show without ()
		// method => denotes with parenthesis e.g makeTea()
		
		// Calculate size of short 
		
		System.out.println("Size of short is "+ ":"+Short.SIZE);
		
	}
}
